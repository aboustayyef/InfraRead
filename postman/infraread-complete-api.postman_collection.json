{
  "info": {
    "name": "Infraread Complete API",
    "description": "Complete API collection for Infraread RSS Reader covering Phases 1-6. Includes Posts, Sources, Categories, OPML, Jobs, and Metrics APIs. Uses Sanctum Bearer token authentication.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "3.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "description": "Base URL for your Infraread instance"
    },
    {
      "key": "bearer_token",
      "value": "YOUR_TOKEN_HERE",
      "description": "Your Sanctum personal access token"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{bearer_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Posts API",
      "item": [
        {
          "name": "List Posts",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Accept", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/posts?include=source,category&page=1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "posts"],
              "query": [
                {"key": "include", "value": "source,category"},
                {"key": "source_id", "value": "", "disabled": true},
                {"key": "category_id", "value": "", "disabled": true},
                {"key": "page", "value": "1"}
              ]
            }
          }
        },
        {
          "name": "Get Single Post",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Accept", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/posts/1?include=source,category",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "posts", "1"],
              "query": [
                {"key": "include", "value": "source,category"}
              ]
            }
          }
        },
        {
          "name": "Mark Post Read/Unread",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Accept", "value": "application/json"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/posts/1/read-status",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "posts", "1", "read-status"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"read\": true\n}"
            }
          }
        },
        {
          "name": "Bulk Mark Posts Read/Unread",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Accept", "value": "application/json"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/posts/bulk-read-status",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "posts", "bulk-read-status"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"post_ids\": [1, 2, 3, 4, 5],\n  \"read\": true\n}"
            }
          }
        },
        {
          "name": "Mark All Posts Read/Unread",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Accept", "value": "application/json"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/posts/mark-all-read",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "posts", "mark-all-read"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"read\": true,\n  \"source_id\": 1,\n  \"category_id\": 2,\n  \"before_date\": \"2025-08-14\"\n}"
            }
          }
        },
        {
          "name": "Generate Post Summary",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Accept", "value": "application/json"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/posts/1/summary",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "posts", "1", "summary"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sentences\": 2\n}"
            }
          }
        }
      ]
    },
    {
