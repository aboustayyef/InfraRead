    },
    {
      "name": "OPML API",
      "item": [
        {
          "name": "Export OPML",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Accept", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/export-opml",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "export-opml"]
            }
          }
        },
        {
          "name": "Preview OPML Import",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Accept", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/preview-opml",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "preview-opml"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "opml",
                  "type": "file",
                  "src": "/path/to/your/feeds.opml"
                }
              ]
            }
          }
        },
        {
          "name": "Import OPML (Replace Mode)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Accept", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/import-opml",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "import-opml"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "opml",
                  "type": "file",
                  "src": "/path/to/your/feeds.opml"
                },
                {
                  "key": "mode",
                  "value": "replace",
                  "type": "text"
                }
              ]
            }
          }
        },
        {
          "name": "Import OPML (Merge Mode)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Accept", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/import-opml",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "import-opml"]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "opml",
                  "type": "file",
                  "src": "/path/to/your/feeds.opml"
                },
                {
                  "key": "mode",
                  "value": "merge",
                  "type": "text"
                }
              ]
            }
          }
        }
      ]
    },
